<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_bottom_sheet"
    android:padding="24dp">

    <View
        android:id="@+id/sheetHandle"
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:background="#E0E0E0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Detalles de la Organización"
        android:textColor="#1A3B85"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sheetHandle" />

    <TextView
        android:id="@+id/lblCif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="CIF:"
        android:textColor="#1A3B85"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    <TextView
        android:id="@+id/tvCifVal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="#333333"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@id/lblCif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/lblCif"
        tools:text="G12345678" />

    <TextView
        android:id="@+id/lblCorreo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Correo:"
        android:textColor="#1A3B85"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lblCif" />

    <TextView
        android:id="@+id/tvCorreoVal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="#333333"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@id/lblCorreo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/lblCorreo"
        tools:text="contacto@ong.org" />

    <TextView
        android:id="@+id/lblSector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Sector:"
        android:textColor="#1A3B85"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lblCorreo" />

    <TextView
        android:id="@+id/tvSectorVal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="#333333"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/lblSector"
        tools:text="Educación / Social" />

    <TextView
        android:id="@+id/lblZona"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Zona / Ciudad:"
        android:textColor="#1A3B85"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSectorVal" />

    <TextView
        android:id="@+id/tvZonaVal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="#333333"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/lblZona"
        tools:text="Pamplona" />

    <TextView
        android:id="@+id/lblMision"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Misión:"
        android:textColor="#1A3B85"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvZonaVal" />

    <TextView
        android:id="@+id/tvMisionVal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="#333333"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/lblMision"
        tools:text="Nuestra misión es ayudar a la integración de..." />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCerrarPopup"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#1A3B85"
        android:text="CERRAR DETALLES"
        android:textColor="#FFFFFF"
        app:cornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvMisionVal" />

</androidx.constraintlayout.widget.ConstraintLayout>