<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.VistaOrganizador.OrgVoluntariadosFragment">

    <LinearLayout
        android:id="@+id/layoutContenido"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/tvTituloVoluntariados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:text="Voluntariados"
            android:textColor="#1A3B85"
            android:textSize="38dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etBuscadorVoluntariado"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/background_search_bar"
            android:hint="Buscar voluntariado..."
            android:inputType="text"
            android:paddingStart="16dp"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:drawablePadding="10dp"
            android:drawableTint="#757575"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvVoluntariados"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:nestedScrollingEnabled="false"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutCarga"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@android:color/white"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:indeterminateTint="#1A3B85"/>

        <TextView
            android:id="@+id/tvTextoCarga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Cargando ofertas"
            android:textColor="#1A3B85"
            android:textSize="18sp"
            android:textStyle="bold"/>
    </LinearLayout>

</FrameLayout>