<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="#FFFFFF"
    app:cardElevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <LinearLayout
            android:id="@+id/btnCerrarPopup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_button_white"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X Cerrar"
                android:textColor="#1A3B85"
                android:textStyle="bold"
                android:textSize="12sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/lblDescripcionVol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripción:"
            android:textColor="#1A3B85"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnCerrarPopup"/>

        <TextView
            android:id="@+id/tvDescripcionVolVal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción..."
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/lblDescripcionVol"/>

        <TextView
            android:id="@+id/lblFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha:"
            android:textColor="#1A3B85"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvDescripcionVolVal"/>

        <TextView
            android:id="@+id/tvFechaVal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha..."
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/lblFecha"/>

        <TextView
            android:id="@+id/lblNecesidadesVol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Necesidades:"
            android:textColor="#1A3B85"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvFechaVal"/>

        <LinearLayout
            android:id="@+id/containerNecesidadesVol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/lblNecesidadesVol"/>

        <TextView
            android:id="@+id/lblODS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ODS:"
            android:textColor="#1A3B85"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/containerNecesidadesVol"/>

        <LinearLayout
            android:id="@+id/containerODS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/lblODS"/>

        <LinearLayout
            android:id="@+id/infoOcultaAceptado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:background="#F5F5F5"
            android:padding="15dp"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/containerODS">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¡Voluntariado Aceptado!"
                android:textColor="#2E7D32"
                android:textStyle="bold"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Datos de contacto desbloqueados..."
                android:textColor="#000000"
                android:textSize="14sp"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>