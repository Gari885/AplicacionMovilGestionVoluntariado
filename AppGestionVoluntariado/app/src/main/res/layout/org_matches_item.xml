<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/ivAvatarVol"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/circle_blue_bg"
            android:padding="8dp"
            app:srcCompat="@drawable/persona"
            app:tint="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvNombreVol"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="MarÃ­a GarcÃ­a"
            android:textColor="#1A3B85"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/ivAvatarVol"
            app:layout_constraintTop_toTopOf="@+id/ivAvatarVol"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvEmailVol"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="maria.garcia@gmail.com"
            android:textSize="12sp"
            android:textColor="#757575"
            app:layout_constraintStart_toStartOf="@+id/tvNombreVol"
            app:layout_constraintTop_toBottomOf="@+id/tvNombreVol"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/tvEmailVol"/>

        <ImageView
            android:id="@+id/ivIconoOrg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/circle_blue_bg"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_edificio"
            app:tint="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider" />

        <TextView
            android:id="@+id/tvNombreOrg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Hogares Verdes"
            android:textColor="#1A3B85"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/ivIconoOrg"
            app:layout_constraintTop_toTopOf="@+id/ivIconoOrg"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvEmailOrg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ðŸ“© hogares.verdes@gmail.org"
            android:textSize="12sp"
            android:textColor="#757575"
            app:layout_constraintStart_toStartOf="@+id/tvNombreOrg"
            app:layout_constraintTop_toBottomOf="@+id/tvNombreOrg"
            app:layout_constraintEnd_toEndOf="parent"/>


        <ImageView
            android:id="@+id/btnInfo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_button_info"
            android:padding="10dp"
            app:srcCompat="@drawable/info"
            app:tint="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivIconoOrg" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAceptar"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_button_reject"
            app:backgroundTint="@null"
            android:text="âœ”"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/btnInfo"
            app:layout_constraintStart_toEndOf="@+id/btnInfo"
            app:layout_constraintEnd_toStartOf="@+id/btnRechazar"
            app:layout_constraintTop_toTopOf="@+id/btnInfo"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnRechazar"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_button_accept"
            app:backgroundTint="@null"
            android:text="X"
            android:textColor="#1A3B85"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/btnInfo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnAceptar"
            app:layout_constraintTop_toTopOf="@+id/btnInfo"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>