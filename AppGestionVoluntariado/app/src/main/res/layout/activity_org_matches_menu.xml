<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.OrgMatchesMenuActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">
        <include
            android:id="@+id/miToolbar"
            layout="@layout/componente_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvTituloMatches"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Matches"
            android:textColor="#1A3B85"
            android:textSize="40dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/miToolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/tvTituloMatches"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:id="@+id/btnPendientes"
                android:layout_width="280dp"
                android:layout_height="80dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/background_button_pill_large"
                android:elevation="8dp"
                android:paddingStart="30dp"
                android:text="ðŸ•ž Pendientes"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/btnEnCurso"
                android:layout_width="280dp"
                android:layout_height="80dp"
                android:background="@drawable/background_button_pill_large"
                app:backgroundTint="@null"
                android:text="En Curso"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:elevation="8dp"
                android:layout_marginBottom="30dp"/>

            <Button
                android:id="@+id/btnCompletados"
                android:layout_width="280dp"
                android:layout_height="80dp"
                android:background="@drawable/background_button_pill_large"
                app:backgroundTint="@null"
                android:text="âœ” Completados"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:elevation="8dp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include layout="@layout/componente_menu_lateral"/>

</androidx.drawerlayout.widget.DrawerLayout>