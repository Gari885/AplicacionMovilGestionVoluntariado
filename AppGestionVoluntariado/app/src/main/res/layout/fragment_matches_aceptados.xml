<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.VistaOrganizacion.MatchesAceptadosFragment">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTituloOrg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:text="Matches"
        android:textColor="#1A3B85"
        android:textSize="38dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <Button
            android:id="@+id/btnVolver"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/background_button_pill"
            app:backgroundTint="@null"
            android:text="← Volver"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"/>

        <Button
            android:id="@+id/btnAnadirMatch"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/background_button_pill"
            app:backgroundTint="@null"
            android:text="+ Añadir Match"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"/>
    </RelativeLayout>

    <EditText
        android:id="@+id/etBuscadorMatch"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/background_search_bar"
        android:hint="Buscar match..."
        android:inputType="text"
        android:paddingStart="16dp"
        android:drawableStart="@android:drawable/ic_menu_search"
        android:drawablePadding="10dp"
        android:drawableTint="#757575"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:weightSum="2">

        <TextView
            android:id="@+id/tabOrgPendientes"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/background_tab_selected"
            android:text="Pendientes"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/tabOrgAceptados"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/background_tab_unselected"
            android:text="Aceptados"
            android:textColor="#1A3B85"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMatches"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:nestedScrollingEnabled="false"/>

</LinearLayout>

</FrameLayout>