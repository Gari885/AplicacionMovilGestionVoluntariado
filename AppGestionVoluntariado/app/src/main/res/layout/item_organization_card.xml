<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/ivOrganizationIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/background_icon_blue"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_apartment"
            app:tint="#FFFFFF" />

        <TextView
            android:id="@+id/tvOrganizationName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Hogares Verdes"
            android:textColor="#1A3B85"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivOrganizationIcon"
            app:layout_constraintTop_toTopOf="@+id/ivOrganizationIcon" />

        <TextView
            android:id="@+id/tvOrganizationEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="hogares.verdes@gmail.com"
            android:textColor="#000000"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tvOrganizationName"
            app:layout_constraintTop_toBottomOf="@+id/tvOrganizationName" />

        <ImageView
            android:id="@+id/btnOrganizationInfo"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_square_gris"
            android:padding="10dp"
            app:srcCompat="@drawable/ic_info"
            app:tint="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivOrganizationIcon"
            app:layout_constraintBottom_toBottomOf="parent" />

        <LinearLayout
            android:id="@+id/layoutPending"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="horizontal"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/btnOrganizationInfo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnOrganizationInfo"
            app:layout_constraintTop_toTopOf="@+id/btnOrganizationInfo">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnAcceptOrganization"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_square_blue"
                android:text="âœ”"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnRejectOrganization"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/button_square_white"
                android:text="X"
                android:textColor="#1A3B85"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:id="@+id/btnDeleteOrganization"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/button_square_white"
            android:padding="10dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/btnOrganizationInfo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btnOrganizationInfo"
            app:srcCompat="@drawable/ic_trash"
            app:tint="#D32F2F" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>