<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.OrgVoluntariosActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/white">

        <include
            android:id="@+id/miToolbar"
            layout="@layout/componente_toolbar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="50dp">

                <TextView
                    android:id="@+id/tvTituloVoluntariados"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_horizontal"
                    android:text="Voluntariados"
                    android:textColor="#1A3B85"
                    android:textSize="38dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnAnadirVoluntariado"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/background_button_pill"
                    app:backgroundTint="@null"
                    android:text="+ AÃ±adir Voluntariado"
                    android:textColor="#FFFFFF"
                    android:textAllCaps="false"
                    android:textSize="12sp"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"/>

                <EditText
                    android:id="@+id/etBuscadorVoluntariado"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/background_search_bar"
                    android:hint="Buscar voluntariado..."
                    android:inputType="text"
                    android:paddingStart="16dp"
                    android:drawableStart="@android:drawable/ic_menu_search"
                    android:drawablePadding="10dp"
                    android:drawableTint="#757575"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvVoluntariados"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:nestedScrollingEnabled="false"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <include layout="@layout/componente_menu_lateral"/>

</androidx.drawerlayout.widget.DrawerLayout>