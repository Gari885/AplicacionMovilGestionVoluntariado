<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <Button
        android:id="@+id/btnVolver"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_button_pill"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:text="← Volver"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:backgroundTint="#1A3B85"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iconLock"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@android:drawable/ic_lock_lock"
        app:tint="#1A3B85"
        app:layout_constraintBottom_toTopOf="@+id/tvTitulo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8" />

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:text="Seguridad"
        android:textColor="#1A3B85"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTitulo">

        <EditText
            android:id="@+id/etPassActual"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/input_rounded_bg"
            android:hint="Contraseña Actual"
            android:inputType="textPassword"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/etPassNueva"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/input_rounded_bg"
            android:hint="Nueva Contraseña"
            android:inputType="textPassword"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/etPassConfirmar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/input_rounded_bg"
            android:hint="Repetir Nueva Contraseña"
            android:inputType="textPassword"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="30dp"/>

        <Button
            android:id="@+id/btnCambiarPass"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/background_button_pill"
            app:backgroundTint="#1A3B85"
            android:text="Actualizar Contraseña"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>