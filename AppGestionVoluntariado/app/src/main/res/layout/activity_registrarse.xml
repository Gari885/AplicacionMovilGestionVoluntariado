<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.RegistrarseActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="163dp"
        android:layout_height="52dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/logo4vnofondo"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/btnVolutnario"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="270dp"
        android:backgroundTint="@color/azul"
        android:text="@string/Como_Voluntario" />

    <Button
        android:id="@+id/btnOrganizador"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_marginTop="370dp"
        android:textColor="@color/azul"
        android:layout_marginStart="100dp"
        android:background="@drawable/background_button_white"
        app:backgroundTint="@null"
        android:text="@string/Como_Organizador" />

    <TextView
        android:layout_marginTop="90dp"
        android:textColor="@color/azul"
        android:textSize="50dp"
        android:textStyle="bold"
        android:layout_marginStart="80dp"
        android:id="@+id/registrarseTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Registrarse" />

</FrameLayout>