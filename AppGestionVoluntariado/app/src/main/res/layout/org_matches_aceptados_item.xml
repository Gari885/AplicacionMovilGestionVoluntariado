<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvEstadoMatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="En Curso"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="#1A3B85"
            android:background="@drawable/tag_bg_blue"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/ivAvatarVol"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/background_icon_blue"
            android:padding="8dp"
            app:srcCompat="@drawable/persona"
            app:tint="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvNombreVol"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="María García"
            android:textColor="#1A3B85"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/ivAvatarVol"
            app:layout_constraintTop_toTopOf="@+id/ivAvatarVol"
            app:layout_constraintEnd_toStartOf="@+id/tvEstadoMatch"/>

        <TextView
            android:id="@+id/tvEmailVol"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="maria.garcia@gmail.com"
            android:textSize="12sp"
            android:textColor="#757575"
            app:layout_constraintStart_toStartOf="@+id/tvNombreVol"
            app:layout_constraintTop_toBottomOf="@+id/tvNombreVol"
            app:layout_constraintEnd_toStartOf="@+id/tvEstadoMatch"/>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/tvEmailVol"/>

        <ImageView
            android:id="@+id/ivIconoActividad"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/background_icon_blue"
            android:padding="8dp"
            app:srcCompat="@drawable/apartamento"
            app:tint="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider" />

        <TextView
            android:id="@+id/tvTituloActividad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Ayudar en Residencia"
            android:textColor="#1A3B85"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/ivIconoActividad"
            app:layout_constraintTop_toTopOf="@+id/ivIconoActividad"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvZonaActividad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Zona: San Jorge"
            android:textSize="12sp"
            android:textColor="#757575"
            app:layout_constraintStart_toStartOf="@+id/tvTituloActividad"
            app:layout_constraintTop_toBottomOf="@+id/tvTituloActividad"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnFinalizarMatch"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="8dp"

            android:background="@drawable/button_square_blue"
            app:backgroundTint="@null"
            android:text="Finalizar"
            android:textColor="#FFFFFF"
            android:textStyle="bold"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnCancelarMatch"
            app:layout_constraintTop_toBottomOf="@+id/ivIconoActividad"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCancelarMatch"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="8dp"

            android:background="@drawable/button_square_white"
            app:backgroundTint="@null"
            android:text="Cancelar"
            android:textColor="#D32F2F"
            android:textStyle="bold"

            app:layout_constraintStart_toEndOf="@+id/btnFinalizarMatch"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivIconoActividad"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>