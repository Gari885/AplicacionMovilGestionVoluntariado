<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:text="Organizaciones"
            android:textColor="#1A3B85"
            android:textSize="34sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etSearchOrganization"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/background_search_bar"
            android:hint="Buscar organización por nombre o CIF..."
            android:inputType="text"
            android:paddingStart="16dp"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:drawablePadding="10dp"
            android:drawableTint="#757575"
            android:elevation="2dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:weightSum="2">

            <TextView
                android:id="@+id/tabStatusPending"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/background_tab_selected"
                android:text="Pendientes"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginEnd="4dp"
                android:elevation="2dp"/>

            <TextView
                android:id="@+id/tabStatusAccepted"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/background_tab_unselected"
                android:text="Aceptadas"
                android:textColor="#1A3B85"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginStart="4dp"
                android:elevation="2dp"/>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvOrganizations"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingBottom="100dp"
                tools:listitem="@layout/item_organization_card" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutLoading"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#E6FFFFFF"
                android:clickable="true"
                android:focusable="true"
                android:visibility="gone">

                <ProgressBar
                    android:id="@+id/pbLoading"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:indeterminate="true"
                    android:indeterminateTint="#1A3B85"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.3" />

                <TextView
                    android:id="@+id/tvLoadingText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Cargando organizaciones..."
                    android:textColor="#1A3B85"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@+id/pbLoading"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </FrameLayout>
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddOrganization"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="35dp"
        android:src="@android:drawable/ic_input_add"
        app:backgroundTint="#1A3B85"
        app:tint="#FFFFFF"
        app:elevation="6dp"
        android:contentDescription="Añadir organización" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>