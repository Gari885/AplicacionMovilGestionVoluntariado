<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_bottom_sheet"
    android:orientation="vertical"
    android:padding="24dp">

    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:background="#D1D1D1" />

    <TextView
        android:id="@+id/tvSheetTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seleccionar opciones"
        android:textColor="#1A3B85"
        android:textSize="22sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etSearchSheet"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/background_search_bar"
        android:drawableStart="@android:drawable/ic_menu_search"
        android:drawablePadding="12dp"
        android:hint="Buscar..."
        android:inputType="text"
        android:paddingStart="16dp"
        android:textSize="14sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="16dp"
        android:fadeScrollbars="false">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/cgAllItems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:chipSpacing="8dp"
            app:chipSpacingHorizontal="8dp"
            app:chipSpacingVertical="4dp" />
    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnConfirmSelection"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#1A3B85"
        android:text="CONFIRMAR SELECCIÃ“N"
        android:textSize="14sp"
        android:textStyle="bold"
        app:cornerRadius="12dp" />

</LinearLayout>